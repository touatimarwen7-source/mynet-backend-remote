# MyNet.tn - B2B Procurement Platform
# Environment Configuration Template

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mynet_db
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=mynet_db

# Backend Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Frontend
VITE_API_BASE_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000

# Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d
TOKEN_ENCRYPTION_KEY=your_token_encryption_key_32_chars

# MFA
MFA_WINDOW=30
MFA_BACKUP_CODES_COUNT=10

# Session
SESSION_SECRET=your_session_secret_key_here
SESSION_TIMEOUT=3600000

# Email Service (SendGrid/Resend/Gmail)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@mynet.tn
SENDGRID_API_KEY=your_sendgrid_api_key_here
RESEND_API_KEY=your_resend_api_key_here
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASSWORD=your_app_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
CORS_ORIGIN=http://localhost:5000
CORS_CREDENTIALS=true
CSRF_TOKEN_LENGTH=32

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Encryption
AES_ENCRYPTION_KEY=your_aes_encryption_key_32_chars_hex

# Payment Gateway (if needed)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLIC_KEY=pk_test_your_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=

# Feature Flags
FEATURE_MFA_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Tender Configuration
TENDER_AUTO_CLOSE_ENABLED=true
TENDER_CLOSE_CHECK_INTERVAL=60000
